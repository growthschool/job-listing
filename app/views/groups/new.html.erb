<div class="col-md-4 col-md-offset-4">
    <h2>新增讨论版</h2>

    <hr>

    <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    <%= form_for @group do |f| %>

    标题
    <%= f.text_field :title %>
    <br>
    叙述
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
