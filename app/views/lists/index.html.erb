<div class="col-md-12">
  <div class="group">
    <%= link_to("New list", new_list_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td>#</td>
          <td><%= link_to(list.title, list_path(list)) %></td>
          <td><%= list.description %></td>
          <td>
              <%= link_to("Edit", edit_list_path(list), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", list_path(list),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
