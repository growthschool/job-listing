<div class="container"> 
  <h2>管理员后台</h2>

    <div class="row col-md-3"> 
        <div class="span2"> 
            <ul class="nav nav-pills nav-stacked"> 
                <li class="active"><a href="/admin/jobs">Jobs</a></li> 
                <li><a href="/">Home</a></li> 
                <li><a href="#">超级金手指 </a></li> 
                <li><a href="#">Magic Button</a></li> 
                <li><a href="#">不要点击这里！</a></li> 
            </ul> 
        </div> 
    </div> 


    <div class="col-md-9">

      <%= link_to("发布新的招聘信息", new_admin_job_path, class:"btn btn-primary pull-right") %>  
  
      <table class="table table-hover">
        <thead>
          <tr>
           <td>#</td>
           <td>工作</td>
           <td>薪酬</td>
           <td>内容</td>
           <% if current_user %>
           <td>操作</td>
           <td>是否公开</td>
           <% end %>
          </tr>
        </thead>
    
        <tbody>
           <% @jobs.each do |job| %>
           <tr>
           <td>#</td>
           <td><%= job.title %></td>
           <td><%= "#{job.wage_lower_bound} ~ #{job.wage_upper_bound}"%></td>
           <td><%= job.description %></td>
           <% if current_user %>
            <td>
              <%= link_to("编辑", edit_admin_job_path(job), class: "btn btn-sm btn-default") %>
              <%= link_to("删除", admin_job_path(job), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "确认删除信息？"}) %>
            </td>
           <% end %>

            <% if job.is_hidden %>
              <td><i class="fa fa-lock" aria-hidden="true"></i></td>
            <% else %>
              <td><i class="fa fa-globe" aria-hidden="true"></i></td>
            <% end %>

            </tr>
            <% end %>
         </tbody>

      </table>

    </div>
</div>

