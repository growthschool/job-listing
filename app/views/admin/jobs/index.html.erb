<div class="pull-right">
  <%= link_to("发布职位", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">

<tr>
  <th>职位名</th>
  <th>上传时间</th>
  <th>发布状态</th>
  <th>操作</th>
</tr>
  <% @jobs.each do |job| %>
      <!-- 修饰是否发布 -->
      <% if job.is_publish %>
      <tr class="success">
      <% else %>
      <tr  class="danger">
      <% end %>

    <td>
      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
    <td>
      <% if job.is_publish %>
      Public
      <% else %>
      Private
      <% end %>
    </td>
    <td>
      <%= job.user.email %>
    </td> 
    <td>
      <%= link_to("编辑", edit_admin_job_path(job)) %> |
      <%= link_to("删除", admin_job_path(job), :method => :delete, :data => { :confirm => "确定删除?" }) %>
    </td>
  </tr>
  <% end %>
</table>