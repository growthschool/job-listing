<div class="col-md-12">
  <div class="job">
    <%= link_to("New Job Entry", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Status</td>
        <td>Job</td>
        <td>description</td>
        <td>Upper Bound Wage (￥)</td>
        <td>Lower Bound Wage (￥)</td>
        <td>Contact Email</td>
      </tr>
    </thead>
    <tbody>

      <% @jobs.each do |job| %>

        <tr>
            <td><%= render_job_status(job) %></td>
            <td><%= link_to(job.title, admin_job_path(job)) %></td>
            <td><%= job.description %></td>
            <td><%= job.wage_upper_bound %></td>
            <td><%= job.wage_lower_bound %></td>
            <td><%= job.contact_email %></td>


          <td>
              <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", admin_job_path(job),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
