  <h1><%= @job.title %></h1>
  <h6>职位描述</h6>
  <p><%= simple_format(@job.description) %></p>
  <h6>薪水范围</h6>
  <p><%= @job.wage_lower_bound %> ~ 
  <%= @job.wage_upper_bound %></p>
  <h6>联系方式</h6>
  <p><%= @job.contact_email %></p>
  <br>
  <hr>

    <table class="table">
    <thead>
      <tr>
        <th>用户名</th>
        <th>简历文件</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.user.email %></td>
          <td><a href="<%= resume.attachment %>" target="_blank" class="btn btn-primary btn-xs">预览</a></td>
          <td><%= resume.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>