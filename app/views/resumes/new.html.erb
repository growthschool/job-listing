<% if !@resume.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @resume.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @resume, html: { multipart: true} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :job %>
    <%= f.text_field :job %>
    <br />
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <br />
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
