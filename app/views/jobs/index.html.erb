<div class="col-md-12">
  <div class="job">
   <%= link_to("New Job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>职位名</td>
        <td>描述</td>
        <td>发布者 </td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
           <td> <%= job.user.email %> </td>
          <td>
            <% if current_user && current_user == job.user %>
              <%= link_to("编辑", edit_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("删除", job_path(job),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "确定删除?" } )%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>