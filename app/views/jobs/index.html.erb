<div class="col-md-12">
  <div class="job">
    <%= link_to("New Job Entry", new_job_path, :class => "btn btn-primary pull-right") %>
  </div>

  <div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Sort By
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <a href="/jobs?order=by_minsalary">Min Salary</a>
    </li>
    <li>
      <a href="/jobs?order=by_maxsalary">Max Salary</a>
    </li>
    <li>
      <a href="/jobs">Posted Time</a>
    </li>
  </ul>
  </div>


  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Description</td>
        <td>Created At</td>
        <td>Min Salary</td>
        <td>Max Salary</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>

        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.created_at %>
          <td><%= job.minsalary %>
          <td><%= job.maxsalary %>
          <td>
            <% if current_user %>
            <%# if current_user && current_user == job.user %>
              <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", job_path(job),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <%# end %>

          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
