<div class="col-md-12">
  <div class="job">
    <%= link_to("New job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Last Update</td>
        <td>Upper Wage Bound</td>
        <td>Lower Wage Bound</td>
        <td>Contact Email</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <% if !job.is_hidden %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.created_at %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.contact_email %></td>
          <td>
            <% if current_user && current_user.admin? %>
              <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", job_path(job), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
