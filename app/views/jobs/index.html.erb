<div class="col-md-12">
  
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>工作</td>
        <td>薪酬</td>
        <td>内容</td>
      </tr>
    </thead>
    
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= job.title %></td>
          <td><%= "#{job.wage_lower_bound} ~ #{job.wage_upper_bound}"%></td>
          <td><%= job.description %></td>
        </tr>
      <% end %>
    </tbody>

  </table>


</div>