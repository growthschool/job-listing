<div class="dropdown clearfix pull-right">

  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    排序
       <span class="caret"></span>
  </button>

  <ul class="dropdown-menu" aria-lebelledbby="dropdownMenuDivider">
      <li>
        <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
      </li>
      <li>
        <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
      </li>
      <li>
          <%= link_to("按照发表时间排序", jobs_path) %>
      </li>
  </ul>
</div>

   <div class="pull-right">
       <%= link_to("新增工作", new_job_path, :class => "btn btn-default" )%>
    </div>
<table class="table table-boldered">
   <thead>
     <tr>
         <td>职缺</td>
         <td>最高工资</td>
         <td>最低工资</td>
         <td>发表时间</td>
         <td>操作</td>
     </tr>
   </thead>
   <tbody>
       <% @jobs.each do |job| %>
       <tr>
           <td>
             <%= link_to(job.title, job_path(job)) %>
           </td>
           <td>
             <%= job.wage_upper_bound %>
           </td>
           <td>
              <%= job.wage_lower_bound %>
           <td>
              <%= job.created_at %>
          </td>
          <td>
              <%= link_to("Edit", edit_job_path(job), :class => "btn btn-xs btn-default") %>
              <%= link_to("Destroy", job_path(job),  :class => "btn btn-xs btn-default", :method => :delete, :data => { :confirm => "Are you sure" }) %>
          </td>
       </tr>
    <% end %>
  </tbody>
</table>
