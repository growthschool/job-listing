<div class="col-md-12">
  <div class="job">
    <%= link_to("New Job Entry", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Description</td>
        <td>Created At</td>
        <td>Min Salary</td>
        <td>Max Salary</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <% if job.is_hidden == false %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.created_at %>
          <td><%= job.minsalary %>
          <td><%= job.maxsalary %>
          <td>
            <% if current_user %>
            <%# if current_user && current_user == job.user %>
              <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", job_path(job),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <%# end %>
            <% end %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
