<div class="col-md-12">
  <%= link_to("发布新的招聘信息", new_job_path, class:"btn btn-primary pull-right") %>  
  
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>工作</td>
        <td>薪酬</td>
        <td>内容</td>
      </tr>
    </thead>
    
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= job.title %></td>
          <td><%= "#{job.min_salary}~#{job.max_salary}"%></td>
          <td><%= job.content %></td>
        </tr>
      <% end %>
    </tbody>

  </table>


</div>