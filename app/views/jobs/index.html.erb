        </li> -->
    </ul>
  </div>

<table class="table table-blodered">
  <thead>
    <tr>
      <td>职缺</td>
      <td>最高工资</td>
      <td>最低工资</td>
      <td>发表时间</td>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
