<h1> <%= @job.title %> </h1>

<%= link_to("Write a Resume", new_job_resume_path(@job), class: "btn btn-default pull-right")%>
<p>
  <%= simple_format(@job.description) %>

</p>

<table class="table">
  <thead>
    <tr>
      <th>应聘书内容</th>
      <th>发表者</th>
      <th>发表时间</th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.content %></td>
    <td><%= resume.user.email %></td>
    <td><%= resume.created_at %></td>
  </tr>
  <% end %>
</tbody>
</table>
