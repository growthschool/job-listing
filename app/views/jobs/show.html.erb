<h1> <%= @job.title %> </h1>

<%= link_to("Write a Post", new_job_post_path(@job), class: "btn btn-default pull-right")%>
<p>
  <%= simple_format(@job.description) %>
</p>

<table class="table">
    <thead>
      <tr>
        <th>简历内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
