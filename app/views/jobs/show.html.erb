<div class="col-md-12">
  <div class="group">
    <% if current_user && current_user == @job.user %>
    <%= link_to("编辑", edit_job_path(@job), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @job.title %></h2>
  <h6>职位描述</h6>
  <p><%= @job.description %></p>
  <h6>薪水范围</h6>
  <p><%= @job.wage_lower_bound %> ~ 
  <%= @job.wage_upper_bound %></p>
  <h6>联系方式</h6>
  <p><%= @job.contact_email %></p>
  <%= link_to("Apply", new_job_resume_path(@job), class: "btn btn-default pull-right")%>
</div>