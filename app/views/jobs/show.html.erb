<h1> <%= @job.title %> </h1>
<div class="text-center">
   <%= link_to("投递履历", new_job_resume_path(@job), :style => "font-size: 30px; text-description:underline;")%>
</div>

<p>
  <%= simple_format(@job.description) %>

</p>

<table class="table">
  <thead>
    <tr>
      <th>应聘书内容</th>
      <th>发表者</th>
      <th>发表时间</th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.content %></td>
    <td><%= resume.user.email %></td>
    <td><%= resume.created_at %></td>
  </tr>
  <% end %>
</tbody>
</table>
