<h2>招聘信息</h2>
<div class="col-md-4 col-md-offset-4">
	<hr>
	<%= form_for @job do |f| %>

	标题
	<%= f.text_field :title %>
	<br>

	描述内容
	<%= f.text_area :description %>
	<br>

	最低工资
	<%= f.text_field :wage_lower_bound %>
	<br>

	最高工资
	<%= f.text_field :wage_upper_bound %>
	<br>	

	联系信息
	<%= f.text_field :contact_email %>
	<br>

	<% end %>

</div>