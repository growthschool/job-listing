<h1> <%= @job.title %> </h1>

<p>
  <%= simple_format(@job.description) %>
</p>

<%= link_to("Apply Now", new_job_resume_path(@job), class: "btn btn-default pull-right")%>

<table class="table">
    <thead>
      <tr>
        <th>简历内容</th>
        <th>投递者</th>
        <th>投递时间</th>
        <th>附件</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.content %></td>
          <td><%= resume.user.email %></td>
          <td><%= resume.created_at %></td>
          <td><%= resume.attachment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
