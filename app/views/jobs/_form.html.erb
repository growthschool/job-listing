<%= simple_form_for @job do |f| %>

<div class="form-group">
    <%= f.input :title,:label =>'职位名', input_html: { class: "form-control"} %>
    <%= f.input :description, :label =>'职位描述', input_html: { class: "form-control"} %>
    <%= f.input :wage_lower_bound, :label =>'最低薪水', input_html: { class: "form-control"} %>
    <%= f.input :wage_upper_bound, :label =>'最高薪水', input_html: { class: "form-control"} %>
    <%= f.input :contact_email, :label =>'联系方式', input_html: { class: "form-control"} %>

</div>
<%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>