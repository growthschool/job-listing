<div class="col-md-4 col-md-offset-4">
  <h2>在后台修改职缺</h2>

  <hr>

  <%= simple_form_for [:admin, @job] do |f| %>

    职缺名称
    <%= f.text_field :title %>
    <br>
    职缺描述
    <br>
    <%= f.text_area :descripiton %>
    <br>
    工资下限
    <br>
    <%= f.number_field :wage_lower_bound %>
    <br>
    <br>
    工资上限
    <br>
    <%= f.number_field :wage_upper_bound %>
    <br>
    联系邮箱
    <br>
    <%= f.email_field :contact_email %>
    <br>
    <%= f.input :is_hidden %>
    <br>
    <%= f.submit "提交职缺", :disable_with => '提交中。。。' %>

  <% end %>
</div>
